<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_confirm_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/discovery_id_common_title"
        android:layout_width="270dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:text="内容还未发表，是否确认退出？"
        android:textColor="#333333"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f5f7fb" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/discovery_id_common_bt_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认退出"
            android:textColor="#0f77fa"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f7fb" />

        <TextView
            android:id="@+id/discovery_id_common_bt_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#0f77fa"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>